{
    "manifest_version": 3,
    "name": "AI Summarizer",
    "version": "1.0",
    "description": "Summarize any text on the page with AI",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js", "Readability.js"]
      }
    ]
  }
  